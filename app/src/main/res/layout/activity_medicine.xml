<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollMedicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:id="@+id/containerMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitleMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">

                <ImageView
                    android:id="@+id/imgMedicine"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_medicine"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/tvMedicineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMedicineDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMedicineDefinition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine advances human health by preventing, diagnosing, treating, and modulating disease—integrating biology, chemistry, engineering, data, and clinical practice to extend lifespan &amp; quality of life."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Key Milestones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineMilestones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingMedicineMilestones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Milestones"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textMedicineMilestones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Germ Theory &amp; Antisepsis\n• Vaccination &amp; Immunology foundations\n• Anesthesia &amp; Surgical Sterilization\n• Antibiotics &amp; Antivirals\n• DNA Structure &amp; Genetic Sequencing\n• Organ Transplantation\n• Imaging: X-ray, MRI, CT, PET\n• Monoclonal Antibodies &amp; Biologics\n• PCR &amp; Molecular Diagnostics\n• mRNA Therapeutics\n• CRISPR Gene Editing\n• AI-driven Drug Discovery"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Core Technologies -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineTechnologies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingMedicineTechnologies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Technologies"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textMedicineTechnologies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Molecular Diagnostics &amp; Biomarkers\n• Gene Editing &amp; Vector Delivery\n• Bioinformatics &amp; Omics Integration\n• Cell &amp; Tissue Engineering\n• Advanced Imaging &amp; Radiomics\n• Wearables &amp; Remote Monitoring\n• Robotic &amp; Minimally Invasive Surgery\n• Regenerative Therapies &amp; Stem Cells\n• AI Clinical Decision Support\n• Personalized / Precision Medicine Pipelines"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transformative Shifts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineShifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingMedicineShifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transformative Shifts"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textMedicineShifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Symptom-based → Mechanism-based\n• Acute Intervention → Preventive &amp; Predictive\n• Population Average → Personalized Genomics\n• Invasive → Minimally / Non-invasive\n• Broad-spectrum Drugs → Targeted Biologics\n• Paper Records → Interoperable Digital Health\n• Episodic Care → Continuous Remote Monitoring\n• Trial-and-error Dosing → Biomarker-guided Therapy"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Importance -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingMedicineImportance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why Medicine Matters"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textMedicineImportance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expands healthy lifespan, reduces mortality, combats pandemics, restores function, improves quality-of-life, and drives biotechnology &amp; data innovation platforms."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fun Facts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineFunFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingMedicineFunFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textMedicineFunFacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Average human lifespan doubled in ~150 years.\n• The human genome is ~3 billion base pairs.\n• mRNA vaccine platforms were decades in the making.\n• AI can screen molecules millions of times faster than manual methods.\n• Lab-grown organoids model disease in vitro."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore CTA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicineExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/headingMedicineExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Health Innovation!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textMedicineExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Follow the shift toward precision, prevention, and regenerative care—where biology meets computation."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareMedicine"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>