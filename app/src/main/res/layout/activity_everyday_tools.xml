<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollEverydayTools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:id="@+id/containerEverydayTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitleEverydayTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">
                <ImageView
                    android:id="@+id/imgEverydayTools"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_tools"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />
                <TextView
                    android:id="@+id/tvEverydayToolsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyday Tools"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingEverydayToolsDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsDefinition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Everyday tools enhance personal productivity, comfort, safety, hygiene, and communication—scaling human capability in domestic, educational, and portable contexts."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Key Milestones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsMilestones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingEverydayToolsMilestones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Milestones"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsMilestones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Lever &amp; Wheel (Mechanical Advantage)\n• Metal Tools &amp; Forging\n• Soap &amp; Sanitation Implements\n• Clocks &amp; Portable Timekeeping\n• Writing Instruments &amp; Paper\n• Sewing Machines &amp; Domestic Mechanization\n• Household Electricity &amp; Appliances\n• Personal Cameras &amp; Audio Devices\n• Pocket Calculators\n• Smartphones &amp; Wearables\n• Smart Home Assistants\n• Portable Power Banks &amp; IoT Sensors"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Core Categories -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingEverydayToolsCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Categories"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Utility: Knives, Screwdrivers, Multitools\n• Hygiene: Brushes, Filters, Purifiers\n• Information: Notebooks, Phones, Tablets\n• Comfort: Thermostats, Climate Devices\n• Illumination: LED Lamps, Flashlights\n• Mobility Accessories: Backpacks, Smart Tags\n• Microelectronics: Wearables, Trackers\n• Safety: Smoke Detectors, Smart Locks\n• Power: Chargers, Batteries, Adapters"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transformative Shifts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsShifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingEverydayToolsShifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transformative Shifts"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsShifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Manual → Electrified → Smart\n• Single-purpose → Multi-functional\n• Analog Logging → Digital Sync\n• Local Control → App / Voice Orchestration\n• Passive Objects → Sensor-rich Feedback\n• Disposable → Rechargeable / Sustainable\n• Isolated → Connected Ecosystems\n• Generic → Personalized / Context-aware"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Importance -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingEverydayToolsImportance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why They Matter"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsImportance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Everyday tools scale cognition, reduce effort, enhance safety, enable expression, extend mobility, and integrate people with ambient digital systems."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fun Facts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsFunFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingEverydayToolsFunFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsFunFacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• The pencil remains one of the most reliable ‘offline’ technologies.\n• Modern smartphones combine dozens of legacy devices.\n• LED efficiency lowered global lighting energy intensity.\n• Smart wearables can detect arrhythmias passively.\n• Multi-tools evolved from naval &amp; expedition needs."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore CTA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEverydayToolsExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/headingEverydayToolsExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Daily Innovation!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textEverydayToolsExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Observe how small artifacts compound into large lifestyle shifts through design &amp; integration."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Share -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareEverydayTools"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>