<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollComputing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:id="@+id/containerComputing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitleComputing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">
                <ImageView
                    android:id="@+id/imgComputing"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_computing"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />
                <TextView
                    android:id="@+id/tvComputingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computing"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingComputingDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingDefinition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Computing transforms information through programmable logic—progressing from mechanical calculators to microprocessors, distributed clouds, edge devices, AI accelerators, and quantum prototypes."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Key Milestones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingMilestones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingComputingMilestones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Milestones"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingMilestones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Mechanical Calculators &amp; Punch Cards\n• Vacuum Tubes &amp; Early Mainframes\n• Transistors &amp; Integrated Circuits\n• Operating Systems &amp; Timesharing\n• Microprocessors &amp; Personal Computers\n• Graphical User Interfaces\n• Internet Protocol Suite &amp; Web\n• Mobile Computing &amp; Smartphones\n• Cloud Virtualization &amp; Containers\n• GPU &amp; Parallel Acceleration\n• Machine Learning &amp; Deep Learning Platforms\n• Quantum &amp; Neuromorphic Experiments"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Core Technologies -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingTechnologies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingComputingTechnologies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Technologies"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingTechnologies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Logic Gates &amp; Microarchitectures\n• Instruction Set Design &amp; Compilers\n• Memory Hierarchies &amp; Caches\n• Filesystems &amp; Databases\n• Networking Stacks &amp; Protocols\n• Virtualization, Containers &amp; Orchestration\n• Parallel &amp; Distributed Computing Models\n• Cryptography &amp; Security Primitives\n• AI/ML Frameworks &amp; Accelerators\n• Quantum Qubits &amp; Error Mitigation Research"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transformative Shifts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingShifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingComputingShifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transformative Shifts"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingShifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Batch → Interactive → Cloud-native\n• Monoliths → Microservices → Serverless\n• Single-core → Multi-core → Heterogeneous\n• On-prem → Hybrid → Edge + Cloud Mesh\n• Deterministic → Probabilistic (ML-driven)\n• Manual Ops → Infrastructure as Code\n• Static Auth → Zero Trust Security\n• Classical Only → Quantum-Assisted Explorations"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Importance -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingComputingImportance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why Computing Matters"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingImportance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Computing drives automation, scientific modeling, communication platforms, AI innovation, economic systems, security infrastructure, and global knowledge exchange."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fun Facts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingFunFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingComputingFunFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingFunFacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Transistor counts grew billions-fold (Moore’s trend).\n• GPUs originated for graphics; now power AI training.\n• Quantum circuits exploit superposition &amp; entanglement.\n• Edge devices perform ML inference locally.\n• Open source ecosystems accelerate rapid iteration."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore CTA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardComputingExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/headingComputingExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Digital Evolution!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textComputingExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See how abstraction layers, hardware advances, and distributed intelligence reshape possibility."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Share -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareComputing"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>