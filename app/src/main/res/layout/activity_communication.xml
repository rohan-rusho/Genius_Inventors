<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollCommunication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:id="@+id/containerCommunication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitleCommunication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">

                <ImageView
                    android:id="@+id/imgCommunication"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_comm"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/tvCommunicationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Communication"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingCommunicationDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textCommunicationDefinition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Communication technology enables encoding, transmitting, receiving, and interpreting information across distance &amp; time—evolving from oral tradition &amp; script to telegraph, telephone, radio, television, internet, fiber optics, satellites, and real‑time global networks."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Key Milestones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationMilestones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/headingCommunicationMilestones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Milestones"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textCommunicationMilestones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Writing Systems: Preserving knowledge\n• Postal Routes: Organized message logistics\n• Optical Telegraph (Semaphores): Pre-electric signaling\n• Electric Telegraph (Morse): Instant coded impulses\n• Telephone: Real-time voice transmission\n• Radio: Wireless broadcasting at scale\n• Television: Audio + moving image networks\n• Internet: Packet-switched global data layer\n• Mobile Networks: Ubiquitous personal connectivity\n• Fiber Optics: High-bandwidth light channels\n• Satellites: Global coverage &amp; synchronization\n• Social Platforms: Networked social graphs"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Core Technologies -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationTech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingCommunicationTech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Technologies"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textCommunicationTech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Modulation: Encoding signals onto carriers\n• Switching &amp; Routing: Dynamic path selection\n• Multiplexing: Sharing channels efficiently\n• Compression: Reducing redundancy\n• Error Correction: Maintaining integrity\n• Encryption: Securing confidentiality &amp; trust\n• Spectrum Management: Allocating wireless bands\n• Protocol Stacks: Layered interoperability\n• Synchronization: Time alignment via atomic clocks\n• Edge Caching: Low-latency content delivery"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transformative Shifts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationShifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingCommunicationShifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transformative Shifts"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textCommunicationShifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Analog → Digital: Signal clarity &amp; scalability\n• Point-to-Point → Networked Meshes\n• Central Broadcast → Interactive Streams\n• Passive Consumption → Participatory Media\n• Physical Media → Cloud Persistence\n• Manual Switching → Software-Defined Networks\n• Static Pages → Real-time APIs &amp; Streams\n• Human Moderation → AI-assisted filtering"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Importance -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingCommunicationImportance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why Communication Matters"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textCommunicationImportance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It underpins science collaboration, disaster response, trade efficiency, education access, democratic discourse, cultural diffusion, remote work, telemedicine, and planetary-scale coordination."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fun Facts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationFunFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingCommunicationFunFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textCommunicationFunFacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• First transatlantic telegraph cut message time from weeks to minutes.\n• Undersea fiber cables carry &gt;95% of international data.\n• Early radio amateurs pioneered packet networking.\n• A single submarine cable can exceed 400 Tbps design capacity.\n• Low Earth orbit constellations reduce latency toward ~30–40 ms intercontinental."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore CTA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCommunicationExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/headingCommunicationExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Global Networks!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textCommunicationExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trace the journey from sparks &amp; clicks to quantum links—seeing how infrastructure layers build instant human collaboration."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareCommunication"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>