<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollTransport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:id="@+id/containerTransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitleTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">
                <ImageView
                    android:id="@+id/imgTransport"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_transport"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />
                <TextView
                    android:id="@+id/tvTransportTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Definition -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingTransportDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportDefinition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transport innovation enables efficient movement of people, goods, energy, and data-supporting infrastructure across land, sea, air, and now orbital &amp; near-vacuum corridors—reducing friction, time, and cost per distance."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Key Milestones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportMilestones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingTransportMilestones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Milestones"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportMilestones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Wheel &amp; Axle: Fundamental mechanical leverage\n• Sailing Ships: Wind-powered global exchange\n• Canals: Controlled water logistics\n• Steam Locomotive: High-density inland freight\n• Internal Combustion Auto: Individual mobility\n• Pneumatic Tires &amp; Paved Roads\n• Aviation (Fixed-Wing): High-speed intercity travel\n• Jet Engines: Long-range efficiency\n• Containerization: Standardized global trade\n• High-Speed Rail: Dense corridor acceleration\n• Rockets: Beyond atmosphere access\n• Electric Vehicles: Energy transition pathway"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Core Systems -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportSystems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingTransportSystems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Core Systems"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportSystems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Propulsion: Steam, ICE, turbines, electric drives\n• Energy Storage: Fuel tanks, batteries, cryogenics\n• Guidance &amp; Control: Avionics, inertial nav, GPS\n• Aerodynamics &amp; Hydrodynamics Optimization\n• Materials: Steel → Aluminum → Composites\n• Logistics Networks: Ports, hubs, intermodal yards\n• Scheduling Algorithms: Route + capacity planning\n• Safety Systems: Signaling, ATC, collision avoidance\n• Emissions Management: Filters, catalysts, electrification"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Transformative Shifts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportShifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingTransportShifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transformative Shifts"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportShifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Animal → Mechanical → Electric propulsion\n• Coal → Oil → Multi-energy hybrids → Renewables\n• Manual Control → Fly-by-wire → Autonomy\n• Paper Manifests → Real-time digital tracking\n• Local Trade → Global Just-in-Time logistics\n• Single-Mode → Seamless Intermodal chains\n• Human Pilots → Assisted &amp; remote operations\n• Emission-heavy → Low-carbon transition"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Importance -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingTransportImportance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why Transport Matters"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportImportance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It defines supply chain resilience, food distribution, medical access, economic geography, tourism, emergency evacuation, and the velocity of innovation diffusion."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fun Facts -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportFunFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">
                <TextView
                    android:id="@+id/headingTransportFunFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportFunFacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Containerization cut shipping costs by ~90%.\n• Modern jets cruise near 900 km/h at 11 km altitude.\n• High-speed rail can rival door-to-door short flights.\n• A large cargo ship can carry &gt;20,000 TEU containers.\n• Autonomous drones are trialed for urgent medical delivery.\n• Reusable rockets slash launch cost trajectories."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore CTA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransportExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/headingTransportExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Mobility Systems!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textTransportExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Follow humanity’s shift from muscle power to electrified autonomy &amp; orbital logistics—reshaping distance and possibility."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Share Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareTransport"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>