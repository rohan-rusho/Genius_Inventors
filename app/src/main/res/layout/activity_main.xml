<?xml version="1.0" encoding="utf-8"?>
<!-- Main screen for Genius Inventors with hardcoded texts (no string resources).
     All card title text sizes unified to 18sp. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genius Inventors"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="40dp"
            android:paddingBottom="24dp" />

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="14dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCommunication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                cardView:cardCornerRadius="22dp"
                cardView:cardElevation="10dp"
                cardView:cardBackgroundColor="@color/card_bg"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_comm"
                        android:contentDescription="Communication"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/btnCommunication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Communication"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                cardView:cardCornerRadius="22dp"
                cardView:cardElevation="10dp"
                cardView:cardBackgroundColor="@color/card_bg"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_transport"
                        android:contentDescription="Transport"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/btnTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transport"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="14dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMedicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                cardView:cardCornerRadius="22dp"
                cardView:cardElevation="10dp"
                cardView:cardBackgroundColor="@color/card_bg"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_medicine"
                        android:contentDescription="Medicine"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/btnMedicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEnergy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                cardView:cardCornerRadius="22dp"
                cardView:cardElevation="10dp"
                cardView:cardBackgroundColor="@color/card_bg"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_energy"
                        android:contentDescription="Energy"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/btnEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="28dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardComputing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                cardView:cardCornerRadius="22dp"
                cardView:cardElevation="10dp"
                cardView:cardBackgroundColor="@color/card_bg"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_computing"
                        android:contentDescription="Computing"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/btnComputing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computing"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTools"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                cardView:cardCornerRadius="22dp"
                cardView:cardElevation="10dp"
                cardView:cardBackgroundColor="@color/card_bg"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_tools"
                        android:contentDescription="Everyday Tools"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/btnTools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Everyday Tools"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginTop="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>